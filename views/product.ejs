<%# Include header %>
<%- include('./partials/header.ejs', {
    menuItems
})  %>

<!-- Page Header
======================================== -->
<section class="page-header">

    <div class="breadcrumbs">
        <div class="container">
            <nav class="breadcrumbs-nav text-start">
                <ul>
                    <% crumbs.forEach(crumb => { %>
                        <li><a href="<%= crumb.url %>"><%= crumb.name %></a></li>
                    <% }) %>
                </ul>
            </nav>
        </div>
    </div>

</section>
<!-- Page Header / End -->

<!-- OSF Content
======================================== -->
<div class="osf-content products-page">

    <div class="container">

        <div class="content-title">
            <h1><%= category.page_title %>:</h1>
        </div>

        <!-- OSF Main -->
        <main class="osf-main col-md-12">
            <div class="row">
            <% if (products.length > 0) { %>
                
                <%# Loop the products %>
                <% products.forEach(product => { %>
                    <%- include('./parts/content_product.ejs', {product})  %> 
                <% }) %>
        
            <% } else { %>
                
                <%# Include No Content %>
                <%- include('./parts/content_none.ejs', {
                    error: 'There is no product'
                });  %>   
        
            <% } %>
            </div>
        </main>
        <!-- OSF Main / End -->

    </div>
</div>
<!-- OSF Content / End -->

<%# Include footer %>
<%- include('./partials/footer.ejs')  %>